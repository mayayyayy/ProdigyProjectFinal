<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
        x:Class="ProdigyProjectFinal.View.ProfilePage"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:viewmodel="clr-namespace:ProdigyProjectFinal.ViewModel"
        Title="Profile Page"
        x:DataType="viewmodel:ProfilePageViewModel"
        BackgroundColor="Cornsilk"
        FlowDirection="LeftToRight"
        Shell.BackgroundColor="DarkSeaGreen"
        Shell.FlyoutItemIsVisible="True"
        Shell.TabBarBackgroundColor="Cornsilk"
        Shell.TabBarIsVisible="true"
        Shell.TabBarTitleColor="Black">



    <StackLayout>

        <Grid ColumnDefinitions="*,*">
            <VerticalStackLayout Grid.Column="0">

                <Border
                        Margin="50,30,40,0"
                        HorizontalOptions="Start"
                        StrokeShape="RoundRectangle 20"
                        StrokeThickness="0"
                        VerticalOptions="Start">
                    <VerticalStackLayout
                            Padding="35"
                            BackgroundColor="#ccc2cb"
                            HorizontalOptions="Center"
                            Spacing="20"
                            VerticalOptions="Center"
                            WidthRequest="300">

                        <VerticalStackLayout
                                Grid.Row="1"
                                Grid.Column="1"
                                Spacing="10">
                            <Label
                                    FontAttributes="Italic"
                                    FontFamily="robotoFont"
                                    StyleClass="LoginLbl"
                                    Text="change username" />
                            <Entry
                                    BackgroundColor="Cornsilk"
                                    StyleClass="LoginEntry"
                                    Text="{Binding NewUsername}" />
                        </VerticalStackLayout>


                        <Button
                                Grid.Row="3"
                                Grid.Column="1"
                                BackgroundColor="DarkSeaGreen"
                                Command="{Binding ChangeUsernameBtn}"
                                FontAttributes="Bold"
                                FontFamily="robotoFont"
                                StyleClass="DarkBtn"
                                Text="confirm"
                                TextColor="Black"
                                WidthRequest="100" />

                        <VerticalStackLayout
                                Grid.Row="1"
                                Grid.Column="1"
                                Spacing="10">
                            <Label
                                    FontAttributes="Italic"
                                    FontFamily="robotoFont"
                                    StyleClass="LoginLbl"
                                    Text="change password" />
                            <Entry
                                    BackgroundColor="Cornsilk"
                                    StyleClass="LoginEntry"
                                    Text="{Binding NewPassword}" />
                        </VerticalStackLayout>

                        <Button
                                Grid.Row="3"
                                Grid.Column="1"
                                BackgroundColor="DarkSeaGreen"
                                Command="{Binding ChangePasswordBtn}"
                                FontAttributes="Bold"
                                FontFamily="robotoFont"
                                StyleClass="DarkBtn"
                                Text="confirm"
                                TextColor="Black"
                                WidthRequest="100" />




                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>


            <Image
                    Grid.Column="1"
                    HeightRequest="200"
                    HorizontalOptions="Center"
                    Source="profile_icon.png"
                    WidthRequest="300" />

            <Label
                    Grid.Column="1"
                    FontAttributes="Italic"
                    FontFamily="robotoFont"
                    FontSize="Large"
                    HeightRequest="375"
                    HorizontalOptions="End"
                    Text="{Binding CurrentUserName, StringFormat='current username: {0}'}"
                    WidthRequest="500" />



        </Grid>



    </StackLayout>




</ContentPage>