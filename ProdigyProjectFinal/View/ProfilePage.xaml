<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
        x:Class="ProdigyProjectFinal.View.ProfilePage"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:viewmodel="clr-namespace:ProdigyProjectFinal.ViewModel"
        Title="Profile Page"
        x:DataType="viewmodel:ProfilePageViewModel"
        Shell.TabBarIsVisible="True">

    <StackLayout>


        <VerticalStackLayout
                Padding="35"
                BackgroundColor="BlanchedAlmond"
                HorizontalOptions="Center"
                Spacing="20"
                VerticalOptions="Center"
                WidthRequest="500">

            <VerticalStackLayout
                    Grid.Row="1"
                    Grid.Column="1"
                    Spacing="10">
                <Label StyleClass="LoginLbl" Text="change username" />
                <Entry StyleClass="LoginEntry" Text="{Binding NewUsername}" />
            </VerticalStackLayout>


            <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Command="{Binding ChangeUsernameBtn}"
                    StyleClass="DarkBtn"
                    Text="change"
                    WidthRequest="100" />

            <VerticalStackLayout
                    Grid.Row="1"
                    Grid.Column="1"
                    Spacing="10">
                <Label StyleClass="LoginLbl" Text="change password" />
                <Entry StyleClass="LoginEntry" Text="{Binding NewPassword}" />
            </VerticalStackLayout>

            <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Command="{Binding ChangePasswordBtn}"
                    StyleClass="DarkBtn"
                    Text="change"
                    WidthRequest="100" />

            <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Command="{Binding AddPfp}"
                    StyleClass="DarkBtn"
                    Text="change"
                    WidthRequest="100" />





        </VerticalStackLayout>

    </StackLayout>
</ContentPage>