<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
        x:Class="ProdigyProjectFinal.View.Home"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:viewmodel="clr-namespace:ProdigyProjectFinal.ViewModel"
        x:DataType="viewmodel:HomeViewModel"
        BackgroundColor="Cornsilk"
        FlowDirection="LeftToRight"
        Shell.BackgroundColor="Cornsilk"
        Shell.TabBarIsVisible="false">

    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*">
        <VerticalStackLayout>

            <Button
                    Margin="20,20,200,20"
                    BackgroundColor="#E8937D"
                    CharacterSpacing="1"
                    Command="{Binding GoToProfile}"
                    FontFamily="lamarkieFont"
                    FontSize="40"
                    Text="profile"
                    TextColor="white" />

            <Button
                    Margin="20,20,200,0"
                    BackgroundColor="#E8937D"
                    Command="{Binding GoToSearch}"
                    FontFamily="lamarkieFont"
                    FontSize="40"
                    Text="search"
                    TextColor="white" />




        </VerticalStackLayout>
    </Grid>
</ContentPage>