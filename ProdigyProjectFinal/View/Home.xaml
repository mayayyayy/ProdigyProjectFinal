<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ProdigyProjectFinal.ViewModel"
             x:Class="ProdigyProjectFinal.View.Home"
             x:DataType="viewmodel:HomeViewModel"
   
             
             BackgroundColor="Cornsilk"
             Shell.TabBarIsVisible="false"
             Shell.BackgroundColor="DarkSeaGreen"
             FlowDirection="LeftToRight" Title="Home">

    <VerticalStackLayout>

        <Button
            FontSize="30"
            HorizontalOptions="Start"
            Text="edit profile" 
            BackgroundColor="#ccc2cb"
            
            FontAttributes="Italic"
            FontFamily="robotoFont"
            Command="{Binding GoToProfile}" />

        <Button
            FontSize="30"
            HorizontalOptions="Start"
            Text="X" 
            BackgroundColor="#ccc2cb"

            FontAttributes="Italic"
            FontFamily="robotoFont" />
        
        
        

    </VerticalStackLayout>
</ContentPage>