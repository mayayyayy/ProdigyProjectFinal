<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProdigyProjectFinal.View.ProdPage"
             Title="ProdPage">
    <VerticalStackLayout>
        <Label 
             HorizontalOptions="Center"
            Text="{Binding Message}"
            VerticalOptions="Center" />
        <Label Text="find email"/>
        <Entry x:Name="nickName" Placeholder="הכנס כינוי משתמש"/>
        <Button Text="search" Command="{Binding SearchCommand}" CommandParameter="{Binding Source={x:Reference nickName},Path=Text}"/>
        <Label Text="{Binding FoundEmail}"
             />
    </VerticalStackLayout>
</ContentPage>