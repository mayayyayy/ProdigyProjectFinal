<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProdigyProjectFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:view="clr-namespace:ProdigyProjectFinal.View"
    xmlns:local="clr-namespace:ProdigyProjectFinal"
    Shell.FlyoutBehavior="Flyout"
    >


    <TabBar FlyoutDisplayOptions="AsMultipleItems"> 
        <ShellContent 
            Title="Loading"
            ContentTemplate="{DataTemplate view:LoadingPage}"
            Route="Loading" 
            Shell.FlyoutItemIsVisible="False"/>

    <ShellContent 
            Title="Main Page"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

    <ShellContent 
            Title="Sign Up"
            ContentTemplate="{DataTemplate view:SignUp}"
            Route="SignUp" 
                      />

        <ShellContent 
            Title="Login"
            ContentTemplate="{DataTemplate view:Login}"  
            Route="Login"
            Shell.FlyoutBehavior="Disabled"
            Shell.FlyoutItemIsVisible="False"/>
    
        <ShellContent 
            Title="Profile"
            ContentTemplate="{DataTemplate view:ProfilePage}"  
            Route="ProfilePage"/>
    </TabBar>


</Shell>
